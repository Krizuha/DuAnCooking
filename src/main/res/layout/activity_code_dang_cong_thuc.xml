<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CodeDangCongThucActivity">

    <!-- Phần 1: Ảnh món ăn -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imgMonAn"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/ic_image_placeholder"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_image_border"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btnChonAnh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn ảnh món ăn"
            android:backgroundTint="#ff7A33"/>

    </LinearLayout>

    <!-- Phần 2: Tên món ăn -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutTenMon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên món ăn"
        android:layout_marginTop="12dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputTenMon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Phần 3: Danh mục món ăn -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutDanhMuc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Danh mục (Nướng, Hấp, Xào...)"
        android:layout_marginTop="12dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputDanhMuc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Phần 4: Nguyên liệu -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutNguyenLieu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nguyên liệu"
        android:layout_marginTop="12dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputNguyenLieu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:maxLines="5"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Phần 5: Cách làm -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutCachLam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cách làm"
        android:layout_marginTop="12dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputCachLam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:maxLines="8"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Phần 6: Nút đăng bài -->
    <Button
        android:id="@+id/btnDangCongThuc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng công thức"
        android:layout_marginTop="20dp"
        android:backgroundTint="#ff7A33"
        />




</LinearLayout>